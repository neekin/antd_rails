<div class="space-y-12">
  <!-- Header -->
  <div>
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Calendar 日历</h1>
    <p class="text-gray-600">按照日历形式展示数据的容器。</p>
    <ul class="list-disc list-inside text-gray-600 mt-2 space-y-1">
      <li>当数据是日期或按照日期展示时，例如日程表、任务表等</li>
      <li>当需要一个日期选择器时，可以使用日历模式</li>
    </ul>
  </div>

  <!-- Basic Usage -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">基本使用</h2>
    <p class="text-gray-600 mb-4">一个简单的日历展示。</p>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <%= ant_calendar(value: Date.today) %>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_basic_code %></code></pre>
    </details>
  </section>

  <!-- Selectable -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">可选择日期</h2>
    <p class="text-gray-600 mb-4">设置 selectable: true 允许用户选择日期。</p>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <%= ant_calendar(value: Date.today, selectable: true) %>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_selectable_code %></code></pre>
    </details>
  </section>

  <!-- With Events -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">带事件标记</h2>
    <p class="text-gray-600 mb-4">可以在日历上标记重要事件。</p>
    
    <% events = [
      { date: Date.today, title: 'Team Meeting', color: 'blue' },
      { date: Date.today + 1, title: 'Project Deadline', color: 'red' },
      { date: Date.today + 2, title: 'Birthday Party', color: 'purple' },
      { date: Date.today + 3, title: 'Dentist Appointment', color: 'yellow' },
      { date: Date.today + 7, title: 'Conference', color: 'green' }
    ] %>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <%= ant_calendar(value: Date.today, events: events, selectable: true) %>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_events_code %></code></pre>
    </details>
  </section>

  <!-- Year View -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">年视图</h2>
    <p class="text-gray-600 mb-4">通过设置 mode: 'year' 切换到年视图模式。</p>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <%= ant_calendar(value: Date.today, mode: 'year') %>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_year_mode_code %></code></pre>
    </details>
  </section>

  <!-- Disabled Dates -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">禁用日期</h2>
    <p class="text-gray-600 mb-4">通过 disabled_date 属性禁用特定日期。</p>
    
    <% disable_weekends = ->(date) { [0, 6].include?(date.wday) } %>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <%= ant_calendar(value: Date.today, selectable: true, disabled_date: disable_weekends) %>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_disabled_code %></code></pre>
    </details>
  </section>

  <!-- Card Mode -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">卡片模式</h2>
    <p class="text-gray-600 mb-4">设置 fullscreen: false 使用卡片模式。</p>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <div class="max-w-2xl">
        <%= ant_calendar(value: Date.today, fullscreen: false, selectable: true) %>
      </div>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_card_mode_code %></code></pre>
    </details>
  </section>

  <!-- Chinese Locale -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">中文本地化</h2>
    <p class="text-gray-600 mb-4">设置 locale: 'zh' 使用中文星期标题。</p>
    
    <div class="p-6 bg-gray-50 rounded-lg">
      <%= ant_calendar(value: Date.today, locale: 'zh', selectable: true) %>
    </div>

    <details class="mt-4">
      <summary class="cursor-pointer text-blue-600 hover:text-blue-700 font-medium">显示代码</summary>
      <pre class="mt-2 p-4 bg-gray-900 text-gray-100 rounded-lg overflow-x-auto"><code><%= calendar_locale_code %></code></pre>
    </details>
  </section>

  <!-- API Documentation -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">API</h2>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">参数</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">说明</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">类型</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">默认值</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">value</td>
            <td class="px-6 py-4 text-sm text-gray-600">当前展示的日期</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Date</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Date.today</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">mode</td>
            <td class="px-6 py-4 text-sm text-gray-600">显示模式</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">'month' | 'year'</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">'month'</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">fullscreen</td>
            <td class="px-6 py-4 text-sm text-gray-600">是否全屏显示</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Boolean</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">true</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">selectable</td>
            <td class="px-6 py-4 text-sm text-gray-600">是否可以选择日期</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Boolean</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">false</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">disabled_date</td>
            <td class="px-6 py-4 text-sm text-gray-600">禁用日期的判断函数</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Proc</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">nil</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">events</td>
            <td class="px-6 py-4 text-sm text-gray-600">事件数组，每个事件包含 date, title, color</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Array</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">[]</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">show_header</td>
            <td class="px-6 py-4 text-sm text-gray-600">是否显示头部</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Boolean</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">true</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">show_today_button</td>
            <td class="px-6 py-4 text-sm text-gray-600">是否显示"今天"按钮</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Boolean</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">true</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">locale</td>
            <td class="px-6 py-4 text-sm text-gray-600">语言设置</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">'en' | 'zh'</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">'en'</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>

  <!-- Events -->
  <section>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">事件</h2>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">事件名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">说明</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">回调参数</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">ant--calendar:select</td>
            <td class="px-6 py-4 text-sm text-gray-600">选择日期时触发</td>
            <td class="px-6 py-4 text-sm text-gray-600">{ date, dateString }</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-500">
      <p class="text-sm text-gray-700">
        <strong>监听事件示例：</strong><br>
        <code class="text-xs bg-white px-2 py-1 rounded">
          document.addEventListener('ant--calendar:select', (e) => {<br>
          &nbsp;&nbsp;console.log('Selected date:', e.detail.dateString)<br>
          })
        </code>
      </p>
    </div>
  </section>
</div>
