<% content # 显式执行 Block 以填充 @rows 数组 %>
<div class="overflow-x-auto border border-gray-200 rounded-lg mt-8 mb-12">
  <table class="min-w-full text-left text-sm whitespace-nowrap">
    <thead class="bg-gray-50 border-b border-gray-200">
      <tr>
        <th class="px-4 py-3 font-semibold text-gray-900 w-1/4">Property (参数)</th>
        <th class="px-4 py-3 font-semibold text-gray-900 w-1/3">Description (说明)</th>
        <th class="px-4 py-3 font-semibold text-gray-900">Type (类型)</th>
        <th class="px-4 py-3 font-semibold text-gray-900">Default (默认值)</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100 bg-white">
      <% if @rows.any? %>
        <% @rows.each do |row| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-4 py-3 font-mono text-pink-600 font-medium"><%= row[:property] %></td>
            <td class="px-4 py-3 text-gray-600"><%= row[:description] %></td>
            <td class="px-4 py-3 font-mono text-purple-600 text-xs"><%= row[:type] %></td>
            <td class="px-4 py-3 font-mono text-gray-500 text-xs"><%= row[:default] %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4" class="px-4 py-8 text-center text-gray-400 italic bg-gray-50">
            No API properties defined.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>