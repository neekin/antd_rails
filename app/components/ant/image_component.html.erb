<div class="<%= container_classes %>"
     data-controller="ant--image">
  
  <img src="<%= @src %>"
       alt="<%= @alt %>"
       class="<%= image_classes %>"
       data-ant--image-target="image"
       data-placeholder="<%= @placeholder || default_placeholder %>"
       data-fallback="<%= @fallback || default_fallback %>"
       data-action="<%= @preview ? 'click->ant--image#preview error->ant--image#handleError' : 'error->ant--image#handleError' %>"
       loading="lazy"
       <%= "style=\"#{image_style}\"" if image_style.present? %>>
  
  <% if @preview %>
    <!-- Preview Icon Overlay -->
    <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-0 hover:bg-opacity-50 transition-all duration-200 opacity-0 hover:opacity-100 cursor-pointer group"
         data-action="click->ant--image#preview">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    </div>

    <!-- Preview Modal (will be inserted by Stimulus) -->
    <div data-ant--image-target="modal" class="hidden"></div>
  <% end %>
</div>
