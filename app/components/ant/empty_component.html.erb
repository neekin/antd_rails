<div class="<%= container_classes %>">
  <!-- Empty Image -->
  <div class="mb-4">
    <%= empty_image %>
  </div>
  
  <!-- Description -->
  <% if @description.present? %>
    <p class="text-sm text-gray-500 mb-4">
      <%= @description %>
    </p>
  <% end %>
  
  <!-- Optional Actions (passed as content block) -->
  <% if content.present? %>
    <div class="mt-4">
      <%= content %>
    </div>
  <% end %>
</div>
